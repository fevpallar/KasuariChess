            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:contentDescription="jhgjhgjh"
                app:tabGravity="fill"
                app:tabMode="fixed" />
